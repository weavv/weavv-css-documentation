<div class="width-full">
  <div class="flex flex-gap-4 flex-wrap justify-between items-stretch">

    {% for data in panels.gettingstarted %}
      {% for item in data.panels %}

        <div class="relative (group) padding-12 height-auto width-88 {{ item.panelbg }} shadow-md curve-border-lg">

          <div class="absolute top-8 left-8 width-32 height-32 bg-white opacity-25 shadow-lg curve-border-lg transform (group-hover)translate-x-2 (group-hover)translate-y-2 transition duration-300 linear"></div>

          <div class="{{ item.titlestyle }}">
            {{ item.desc }}
          </div>

          <a
            class="{{ item.buttonstyle }}"
            href="{{ item.url | safe }}"
            target="{{ item.target }}"
            rel="noopener"

            {% if is_current_page %}
              aria-current="page"
            {% endif %}

          >
            {{ item.button }}
          </a>
        </div>

      {% endfor %}
    {% endfor %}

  </div>
</div>