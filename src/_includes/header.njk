<header class="stack-5 header {% if id == 'home' %} fixed__ {% else %} sticky {% endif %} height-24 top-0 flex flex-column items-center justify-center {% if id == 'home' %} bg-black-8 {% else %} bg-white {% endif %} width-full">

  {# {% if id == "home" %}
    {% include "news-bar.njk" %}
  {% endif %} #}

  <div class="relative padding-x-8 max-width-screen-1k margin-x-auto flex flex-row__ items-center width-full">

    <div class="header-left margin-r-12 flex-shrink-0">
      <a
        class="header-logo block"
        href="/"
        target="_self"
        rel="noopener"
        title="{{ site.productname }} CSS Official Documentation"
      >
        {% include "images/logo/color-full-logo-alt.svg" %}
    </div>

    {% include "search.njk" %}

    <nav class="margin-l-12 header-nav hidden (lg)flex">

      <ul class="menu flex flex-column (lg)flex-row items-center justify-center list-reset">

        <li>
          <a
            class="inline-block padding-x-3 padding-y-3 (hover)opacity-75 transition duration-300 ease-in-out"
            href="{{ site.urls.discord }}"
            target="_blank"
            title="Discord"
          >
            {% include "images/icons/discord.svg" %}
          </a>
        </li>

        <li>
          <a
            class="inline-block padding-x-3 padding-y-3 (hover)opacity-75 transition duration-300 ease-in-out"
            href="{{ site.urls.twitter }}"
            target="_blank"
            title="Twitter"
          >
            {% include "images/icons/twitter.svg" %}
          </a>
        </li>

        <li>
          <a
            class="inline-block padding-x-3 padding-y-3 (hover)opacity-75 transition duration-300 ease-in-out"
            href="{{ site.urls.github }}"
            target="_blank"
            title="Github"
          >
            {% include "images/icons/github.svg" %}
          </a>
        </li>

      </ul>

    </nav>

    <nav class="header-nav (lg)hidden flex">
      <ul class="menu flex flex-row items-center list-reset text-sm">

        <li>
          <a
            theme="auto"
            class="inline-block padding-2 (xs)margin-r-0 (sm)margin-r-1 (hover)opacity-75 transition duration-300 ease-in-out"
            href="{{ site.urls.github }}"
            target="_blank"
          >
            {% include "images/icons/github.svg" %}
          </a>
        </li>

        <li class="{% if id == 'home' %} hidden {% elseif id == '404' %} {% else %} block {% endif %}">
          <button class="menu-toggle inline-block margin-l-2 padding-y-1">
            <svg
              class="fill-current text-gray-7 (dark)text-gray-4"
              viewBox="0 0 24 24"
              width="24"
              height="24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <line
                class="line1 stroke-current text-charcoal-1 (dark)text-gray-4 (focus)text-orange-6 stroke-2 filter saturate-4"
                x1="0" y1="8"
                x2="24" y2="8"
              />
              <line
                class="line2 stroke-current text-charcoal-1 (dark)text-gray-4 (focus)text-orange-6 stroke-2 filter saturate-4"
                x1="0" y1="16"
                x2="24" y2="16"
              />
            </svg>
          </button>
        </li>

      </ul>
    </nav>

  </div>
</header>
